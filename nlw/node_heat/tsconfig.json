{
  "compilerOptions": {

    "target": "es2017",                                   
    "lib": ["es2017"],                                    


    "module": "commonjs",                                
    "rootDir": "src",                                  
    
    "resolveJsonModule": true,                          
    
    
    "allowJs": true,                                   
   

    
    "outDir": "build",                                   
   
    "esModuleInterop": true,                             
    
    "forceConsistentCasingInFileNames": true,         

    "strict": false,   

    "noImplicitAny": true,                             

    "skipLibCheck": true, 
    
    "typeRoots": ["./src/@types", "node_modules/@types"]
  }
}
